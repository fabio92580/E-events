<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <TextView
                android:id="@+id/textNomeEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="Caffè Letterario"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="26dp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/immagineLocale"
                android:layout_toRightOf="@+id/textView11"
                android:layout_toEndOf="@+id/textView11" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ratingBar"
                android:layout_marginTop="173dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/letterario1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="156dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.49"
                    android:src="@drawable/letterario2" />
            </LinearLayout>

            <ImageView
                android:id="@+id/immagineLocale"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="69dp"
                android:src="@drawable/letterario0"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textNomeEvento"
                android:layout_alignRight="@+id/imageView5"
                android:layout_alignEnd="@+id/imageView5" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="18dp"
                android:text="Se desideri gustare una buona di caffè e un buon libro, vieni al Caffè Letterario. Troverai una vasta scelta di miscele di caffè, thè e infusi ma sopratutto una vasta scelta di libri."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="via Corso Triste n.89, Caserta (CE)"
                android:textColor="#0e9dbe"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_below="@+id/linearLayout4"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/immagineLocale"
                android:layout_alignStart="@+id/immagineLocale"
                android:layout_below="@+id/textView9"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="32dp"
                android:linksClickable="true"
                android:text="www.caffèletterario.it" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/immagineLocale"
                android:layout_alignStart="@+id/immagineLocale"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="71dp"
                    android:layout_height="75dp"
                    android:src="@drawable/fb" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="71dp"
                    android:layout_height="67dp"
                    android:src="@drawable/telefono" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="305dp"
                android:layout_height="170dp"
                android:src="@drawable/corsolocale"
                android:layout_alignTop="@+id/linearLayout5"
                android:layout_toRightOf="@+id/immagineLocale"
                android:layout_toEndOf="@+id/immagineLocale"
                android:layout_marginTop="6dp" />

        </RelativeLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
